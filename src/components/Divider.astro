---
import divider from "src/assets/images/divider.png"; // Ajusta la ruta según la ubicación de tu imagen
---

<div class="divider"></div>
<style>
    .divider {

        position: relative;
        top: 0;
        right: 0;
        left: 0;
        margin-right: auto;
        margin-left: auto;
        width: 80%;
        height: 120px;
        background-image: url(${divider});
        background-repeat: no-repeat;
        background-size: contain;
        background-position: center center;
    }
</style>

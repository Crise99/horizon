---
import { Icon } from "astro-icon/components";

// components
import FooterLink from "./FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";

// data
import siteData from "@config/siteData.json";

const today = new Date();
---

<footer
  class="mt-12 flex flex-col items-center justify-center bg-base-100/40 py-8"
>
  <div class="site-container">
    <!-- footer links -->
    <div
      class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5"
    >
      <div class="flex justify-center py-2 text-center md:hidden">
        <SiteLogo />
      </div>
      <div class="col-span-2 flex justify-end gap-4">
        <FooterLink href="/">Home</FooterLink>
        <FooterLink href="/#portfolio">Portfolio</FooterLink>
      </div>
      <div class="hidden justify-center text-center md:flex">
        <SiteLogo />
      </div>
      <div class="flex gap-4 md:col-span-2">
        <FooterLink href="/#pricing">Pricing</FooterLink>
        <FooterLink href="/#contact">Contacto</FooterLink>
      </div>
    </div>

    <!-- lets connect -->
    <div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
      <p>
        <span class="italic">Conecta con nosotros!</span> Siguenos en nuestras redes sociales para no perderte nada de nuestra boda.
      </p>
    </div>

    <!-- socials -->
    <div class="mt-8 flex justify-center gap-4 text-primary-500">
      <a
        href="https://www.instagram.com/nuria_smile/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="socials/basil-instagram-solid"
          class="size-6 transition hover:opacity-80"
        />
        <span class="sr-only">Instagram</span>
      </a>
      <a
        href="https://www.instagram.com/crise999/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="socials/basil-instagram-solid"
          class="size-6 transition hover:opacity-80"
        />
        <span class="sr-only">Instagram</span>
      </a>
    </div>

    <!-- copyright -->
    <div class="mb-2 mt-4 text-center text-sm opacity-80">
      &copy; {today.getFullYear()} con amor <a
        href="https://www.bodanuriaycristian.com/"
        class="transition hover:text-primary-600"
        target="_blank"
        rel="noopener">Nuria y Cristian</a
      >
      <!-- {siteData.name}. All rights reserved. -->
    </div>
  </div>
</footer>
